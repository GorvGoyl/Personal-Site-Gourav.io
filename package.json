{
  "name": "personal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "//start": "starts Next.js in development mode",
    "dev": "next dev",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "//prod": "starts Next.js in production server.. restart again after code change",
    "start": "next build && next start",
    "dev:vercel": "vercel dev",
    "deploy:preview": "vercel",
    "//": "//-internal commands-//",
    "//dont use NODE_ENV": "https://github.com/vercel/next.js/blob/master/errors/non-standard-node-env.md",
    "deploy:old": "npm run tsc && dotenv -e .env.prod npm run export && firebase deploy -P prod --only hosting",
    "build": "next build --debug",
    "sitemap": "node ./scripts/generate-sitemap.mjs",
    "feed": "node ./scripts/generate-rss.mjs",
    "postbuild": "npm run sitemap && npm run feed",
    "export": "next build && next export",
    "deploy-lint": "npm run lint && npm run tsc && npm run export && firebase deploy --only hosting",
    "tsc": "tsc",
    "lint": "eslint **/*.{ts,tsx,js,jsx,mdx} -c .eslintrc.js",
    "lint-next": "next lint",
    "stylelint": "npx stylelint '**/*.{css,scss,sass}'",
    "//lint-fix": "eslint ./components/** ./pages/** -c .eslintrc.json --fix --ext .js,.jsx,.ts,.tsx,.scss,.mdx"
  },
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "@google-analytics/data": "^2.8.0",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@mapbox/rehype-prism": "^0.8.0",
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^12.0.4",
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "@tailwindcss/typography": "^0.4.1",
    "esbuild": "^0.14.1",
    "googleapis": "^92.0.0",
    "gray-matter": "^4.0.3",
    "hastscript": "^7.0.2",
    "mdx-bundler": "^8.0.0",
    "next": "^12.1.0",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-enhanced": "^5.0.0",
    "next-seo": "^4.28.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dom-confetti": "^0.2.0",
    "react-medium-image-zoom": "^4.3.5",
    "react-twitter-widgets": "^1.10.0",
    "rehype-autolink-headings": "^6.1.0",
    "rehype-code-titles": "^1.0.3",
    "rehype-prism-plus": "^1.1.3",
    "rehype-slug": "^5.0.0",
    "remark-code-titles": "^0.1.2",
    "remark-gfm": "^3.0.1",
    "remark-mdx-images": "^1.0.3",
    "remark-prism": "^1.3.6",
    "sass": "^1.44.0",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.0.4",
    "@types/gtag.js": "0.0.8",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.3.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "^12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "feed": "^4.2.2",
    "file-loader": "^6.2.0",
    "globby": "^12.0.2",
    "postcss": "^8.4.4",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
