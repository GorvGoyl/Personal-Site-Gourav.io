{
  "name": "personal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "//start": "starts Next.js in development mode",
    "start": "next dev",
    "start:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "//prod": "starts Next.js in production server.. restart again after code change",
    "start:prod": "next build && next start",
    "start:vercel": "vercel dev",
    "deploy:preview": "vercel",
    "//": "//-internal commands-//",
    "//dont use NODE_ENV": "https://github.com/vercel/next.js/blob/master/errors/non-standard-node-env.md",
    "deploy:old": "npm run tsc && dotenv -e .env.prod npm run export && firebase deploy -P prod --only hosting",
    "build": "next build --debug",
    "export": "next build && next export",
    "deploy-lint": "npm run lint && npm run tsc && npm run export && firebase deploy --only hosting",
    "tsc": "tsc",
    "lint": "eslint **/*.{ts,tsx,js,jsx,mdx} -c .eslintrc.js",
    "lint-next": "next lint",
    "stylelint": "npx stylelint '**/*.{css,scss,sass}'",
    "//lint-fix": "eslint ./components/** ./pages/** -c .eslintrc.json --fix --ext .js,.jsx,.ts,.tsx,.scss,.mdx"
  },
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "@mapbox/rehype-prism": "^0.6.0",
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^11.0.0",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "gray-matter": "^4.0.3",
    "next": "^11.1.1",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-enhanced": "^5.0.0",
    "next-seo": "^4.24.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dom-confetti": "^0.2.0",
    "react-twitter-widgets": "^1.10.0",
    "rehype-autolink-headings": "^5.1.0",
    "rehype-slug": "^4.0.1",
    "remark-code-titles": "^0.1.2",
    "remark-prism": "^1.3.6",
    "sass": "^1.35.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^11.1.0",
    "@types/gtag.js": "0.0.5",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "autoprefixer": "^10.2.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-next": "^11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-markdown": "^2.2.0",
    "eslint-plugin-mdx": "^1.13.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "feed": "^4.2.2",
    "file-loader": "^6.2.0",
    "globby": "^11.0.3",
    "postcss": "^8.3.4",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "tailwindcss": "^2.1.4",
    "typescript": "^4.3.2"
  }
}
