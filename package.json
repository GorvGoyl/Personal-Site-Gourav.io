{
  "name": "personal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "//start": "starts Next.js in development mode",
    "start": "start http://localhost:3000 & next dev",
    "start:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "//prod": "starts Next.js in production server.. restart again after code change",
    "start:prod": "next build && next start",
    "start:vercel": "vercel dev",
    "deploy:preview": "vercel",
    "//": "//-internal commands-//",
    "//dont use NODE_ENV": "https://github.com/vercel/next.js/blob/master/errors/non-standard-node-env.md",
    "deploy:old": "npm run tsc && dotenv -e .env.prod npm run export && firebase deploy -P prod --only hosting",
    "build": "next build",
    "export": "next build && next export",
    "deploy-lint": "npm run lint && npm run tsc && npm run export && firebase deploy --only hosting",
    "tsc": "tsc",
    "lint": "eslint ./components/** ./pages/** -c .eslintrc.json --ext .js,.jsx,.ts,.tsx,.mdx, .md --no-error-on-unmatched-pattern",
    "postlint": "npx stylelint '**/*.{css,scss,sass}'",
    "lint-fix": "eslint ./components/** ./pages/** -c .eslintrc.json --fix --ext .js,.jsx,.ts,.tsx,.scss,.mdx"
  },
  "dependencies": {
    "@mapbox/rehype-prism": "^0.6.0",
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^10.1.3",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/typography": "^0.4.0",
    "comma-number": "^2.0.1",
    "gray-matter": "^4.0.2",
    "next": "^10.1.3",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-enhanced": "^5.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-dom-confetti": "^0.2.0",
    "rehype-autolink-headings": "^5.0.1",
    "rehype-slug": "^4.0.1",
    "remark-code-titles": "^0.1.1",
    "remark-prism": "^1.3.5",
    "sass": "^1.32.8",
    "tailwindcss": "^2.1.1"
  },
  "devDependencies": {
    "@types/gtag.js": "0.0.4",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-markdown": "^2.0.1",
    "eslint-plugin-mdx": "^1.12.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "feed": "^4.2.2",
    "file-loader": "^6.2.0",
    "globby": "^11.0.3",
    "postcss": "^8.2.9",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.2.3"
  }
}
