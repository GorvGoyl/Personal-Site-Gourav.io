{
  "name": "personal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "//start": "starts Next.js in development mode",
    "start": "next dev",
    "start:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "//prod": "starts Next.js in production server.. restart again after code change",
    "start:prod": "next build && next start",
    "start:vercel": "vercel dev",
    "//": "//-internal commands-//",
    "//dont use NODE_ENV": "https://github.com/vercel/next.js/blob/master/errors/non-standard-node-env.md",
    "deploy:old": "npm run tsc && dotenv -e .env.prod npm run export && firebase deploy -P prod --only hosting",
    "build": "next build",
    "export": "next build && next export",
    "deploy-lint": "npm run lint && npm run tsc && npm run export && firebase deploy --only hosting",
    "tsc": "tsc",
    "lint": "eslint ./components/** ./pages/** -c .eslintrc.json --ext .js,.jsx,.ts,.tsx,.mdx, .md",
    "lint-fix": "eslint ./components/** ./pages/** -c .eslintrc.json --fix --ext .js,.jsx,.ts,.tsx,.scss,.mdx"
  },
  "dependencies": {
    "@mapbox/rehype-prism": "^0.5.0",
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^10.0.3",
    "@tailwindcss/typography": "^0.3.1",
    "gray-matter": "^4.0.2",
    "next": "^10.0.3",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-enhanced": "^5.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rehype-autolink-headings": "^5.0.1",
    "rehype-slug": "^4.0.1",
    "remark-code-titles": "^0.1.1",
    "remark-prism": "^1.3.3",
    "sass": "^1.30.0",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "@types/gtag.js": "0.0.3",
    "@types/node": "^14.14.13",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "autoprefixer": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "postcss": "^8.2.1",
    "typescript": "^4.1.3"
  }
}
