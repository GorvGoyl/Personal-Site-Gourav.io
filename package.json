{
  "name": "personal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "//start": "starts Next.js in development mode",
    "start": "next dev",
    "start:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "//prod": "starts Next.js in production server",
    "start:prod": "next start",
    "//": "//-internal commands-//",
    "//dont use NODE_ENV": "https://github.com/vercel/next.js/blob/master/errors/non-standard-node-env.md",
    "deploy:old": "npm run tsc && dotenv -e .env.prod npm run export && firebase deploy -P prod --only hosting",
    "build": "next build",
    "export": "next build && next export",
    "deploy-lint": "npm run lint && npm run tsc && npm run export && firebase deploy --only hosting",
    "tsc": "tsc",
    "lint": "eslint ./ -c .eslintrc.json --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "eslint ./components/** ./pages/** -c .eslintrc.json --fix --ext .js,.jsx,.ts,.tsx,.scss"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^10.0.3",
    "@tailwindcss/typography": "^0.3.1",
    "gray-matter": "^4.0.2",
    "next": "^10.0.3",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-remote": "^1.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "tailwindcss": "^2.0.1"
  },
  "devDependencies": {
    "@types/gtag.js": "0.0.3",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "autoprefixer": "^10.0.4",
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "postcss": "^8.1.10",
    "typescript": "^4.1.2"
  }
}
